greeting=("Hello")
name=input("please enter your name" ' ')
print(greeting +' '+ name)
b=float(input("Please enter your weight in inches\n"))
print(b)
a=float(input("please enter your weight in Kgs.\n"))
print(a)
c=float(0.0254)
d=(b*c)
e=(d**2)
f=(a//e)
print (f)
print("your BMI is"+str(f))
g=(e*22)
print(name +", your ideal weight is," + str(g) + "kgs.")
